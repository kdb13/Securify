<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
    </style>
    
    <!-- Theme during app startup to display logo -->
    <style name="AppTheme.Startup">
        <item name="android:windowBackground">@drawable/startup_screen</item>
    </style>
    
    <!-- Sign In -> TITLE -->
    <style name="SignInTitle_textAppearance" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">?android:colorPrimaryDark</item>
    </style>

    <style name="SignInTitle">
        <item name="android:textAppearance">@style/SignInTitle_textAppearance</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_height">?android:actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <!-- Dialog buttons -->
    <style name="DialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Request permissions -->
    <style name="PermissionTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
    </style>

</resources>
