<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.lina.securify.views.fragments.HomeFragment"
        android:label="@string/fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_askForPermissions"
            app:destination="@id/permissionsActivity" />
    </fragment>

    <fragment
        android:id="@+id/alertsFragment"
        android:name="com.lina.securify.views.fragments.AlertsFragment"
        android:label="@string/fragment_alerts"
        tools:layout="@layout/fragment_alerts" />

    <fragment
        android:id="@+id/volunteersFragment"
        android:name="com.lina.securify.views.fragments.VolunteersFragment"
        android:label="@string/fragment_volunteers"
        tools:layout="@layout/fragment_volunteers" >
        <action
            android:id="@+id/action_addVolunteer"
            app:destination="@id/addVolunteerDialogFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/addVolunteerDialogFragment"
        android:name="com.lina.securify.views.dialogs.AddVolunteerDialogFragment"
        android:label="@string/dialog_add_volunteer"
        tools:layout="@layout/dialog_add_volunteer">
    </fragment>

    <activity
        android:id="@+id/permissionsActivity"
        android:name="com.lina.securify.views.activities.PermissionsActivity"
        android:label="@string/activity_permissions"
        tools:layout="@layout/activity_permissions"/>

</navigation>