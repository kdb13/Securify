<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/auth_nav_graph">

    <navigation
        android:id="@+id/auth_nav_graph"
        app:startDestination="@id/splashScreenFragment">

        <fragment
            android:id="@+id/splashScreenFragment"
            android:name="com.lina.securify.views.auth.SplashScreenFragment"
            android:label="fragment_home"
            tools:layout="@layout/fragment_splash_screen">

            <action
                android:id="@+id/action_verifyEmail"
                app:destination="@id/emailFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:popUpTo="@+id/splashScreenFragment"
                app:popUpToInclusive="true"/>

            <action
                android:id="@+id/action_verifyPhone"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim"
                app:destination="@id/phoneFragment"
                app:popUpTo="@+id/splashScreenFragment"
                app:popUpToInclusive="true"/>

        </fragment>

        <fragment
            android:id="@+id/emailFragment"
            android:name="com.lina.securify.views.auth.EmailFragment"
            android:label="fragment_verify_email"
            tools:layout="@layout/fragment_email" >

            <action
                android:id="@+id/action_signUp"
                app:destination="@id/signUpFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />

            <action
                android:id="@+id/action_signIn"
                app:destination="@id/passwordFragment"
                app:enterAnim="@anim/nav_default_enter_anim"
                app:exitAnim="@anim/nav_default_exit_anim"
                app:popEnterAnim="@anim/nav_default_pop_enter_anim"
                app:popExitAnim="@anim/nav_default_pop_exit_anim" />

        </fragment>

        <fragment
            android:id="@+id/signUpFragment"
            android:name="com.lina.securify.views.auth.SignUpFragment"
            android:label="fragment_sign_up"
            tools:layout="@layout/fragment_sign_up" >

            <action
                android:id="@+id/action_verifyPhone"
                app:destination="@id/phoneFragment" />
            <argument
                android:name="email"
                app:argType="string" />

        </fragment>

        <fragment
            android:id="@+id/passwordFragment"
            android:name="com.lina.securify.views.auth.PasswordFragment"
            android:label="fragment_password"
            tools:layout="@layout/fragment_password" >

            <action
                android:id="@+id/action_verifyPhone"
                app:destination="@id/phoneFragment" />
            <argument
                android:name="email"
                app:argType="string" />
        </fragment>

        <action
            android:id="@+id/action_MainApp"
            app:popUpTo="@id/mainActivity"
            app:destination="@id/mainActivity" />

        <fragment
            android:id="@+id/phoneFragment"
            android:name="com.lina.securify.views.auth.PhoneFragment"
            android:label="fragment_verify_phone"
            tools:layout="@layout/fragment_phone">

            <argument
                android:name="addPhoneNo"
                app:argType="boolean"
                app:nullable="false" />

        </fragment>

    </navigation>

    <activity
        android:id="@+id/mainActivity"
        android:name="com.lina.securify.views.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>