<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="dialog"
            type="com.lina.securify.views.dialogs.AlertInfoDialog" />

        <variable
            name="alert"
            type="com.lina.securify.data.models.Alert" />

        <variable
            name="isLocateVisible"
            type="int" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/help_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="@dimen/global_padding"
            android:text="@string/help_message"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/victim_name"
            android:text="@{alert.victimName}"
            tools:text="John Doe"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintTop_toBottomOf="@id/help_title"
            app:layout_constraintStart_toStartOf="@id/help_title"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_call"
            style="@style/DialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{dialog::onButtonClick}"
            android:text="@string/button_call"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/victim_name" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_locate"
            style="@style/DialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_locate"
            android:visibility="@{isLocateVisible}"
            android:onClick="@{dialog::onButtonClick}"
            app:layout_constraintEnd_toStartOf="@+id/button_call"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel"
            style="@style/DialogButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{dialog::onButtonClick}"
            android:text="@string/button_cancel"
            app:layout_constraintBottom_toBottomOf="@+id/button_locate"
            app:layout_constraintEnd_toStartOf="@+id/button_locate" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>

